<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="color_name"
        android:title="Color Name"
        android:defaultValue="true"
        android:summary="Uncheck to hide color name." />


    <CheckBoxPreference
        android:key="color_hex"
        android:title="Hex Value"
        android:defaultValue="true"
        android:summary="Uncheck to hide hexadecimal value." />

    <CheckBoxPreference
        android:key="color_rgb"
        android:title="RGB Value"
        android:defaultValue="true"
        android:summary="Uncheck to hide RGB values." />


</PreferenceScreen>